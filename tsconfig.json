{
    "compilerOptions": {
        "incremental": true,
        "outDir": "dist",
        "rootDirs": ["src"],
        "target": "es2021",
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "strict": true,
        "noImplicitOverride": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src"]
}